{{yield}}
{{#if newReview}}
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control" autofocus="autofocus"}}
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      {{ui-slider max=5 id='rating' value=rating}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" class="form-control"}}
    </div>

    <button class="btn" {{action 'hideReview'}}>Cancel</button>
    <button class="btn" {{action 'addReview'}}>Add</button>
  </form>
{{else}}
  <button class="btn" {{action 'showReview'}}>Add Review</button>
{{/if}}
