{{yield}}
<form>
  <div class='form-group'>
    <label>Username:</label>
    {{input value=name  class='form-control' autofocus="autofocus"}}
  </div>
  <div class='form-group'>
    <label>Enter Email:</label>
    {{input value=email  class='form-control' autofocus="autofocus"}}
  </div>
  <div class='form-group'>
    <label>Enter Password:</label>
    {{input value=password  type='password' class='form-control'}}
  </div>
  <button class='btn btn-success' data-dismiss="modal" {{action 'signUp'}}>Save</button>
</form>
