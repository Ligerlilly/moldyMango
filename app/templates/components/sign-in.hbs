{{yield}}

<form>
  <div class='form-group'>
    <label>Enter Email:</label>
    {{input value=email id='email' class='form-control' autofocus="autofocus" }}
  </div>
  <div class='form-group'>
    <label>Enter Password:</label>
    {{input value=password id='password' type='password' class='form-control' }}
  </div>
  <button class='btn btn-success' data-dismiss="modal" {{action 'signIn'}}>Submit</button>
</form>
